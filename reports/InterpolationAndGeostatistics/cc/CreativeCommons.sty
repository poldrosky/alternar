% Style file for LaTeX2e
%   \usepackage{CreativeCommons}
%
% This package provides a Creative Commons licensing information page. It uses
% Encapsulated PostScript or pdf files for the buttons and icons.
%
% macros:
%    \CCbyInfo
%    \CCbysaInfo
%    \CCbyndInfo
%    \CCbyncInfo
%    \CCbyncsaInfo
%    \CCbyncndInfo
%      Generates CC logos and accompanying text
%
% This module also define macros for several Creative Commons icons and buttons.
%
% Example:
%   \usepackage{CreativeCommons}
%   \CCbyInfo

\RequirePackage{graphics}
\RequirePackage{color}
\RequirePackage{url}

\newlength{\imarg}
\setlength{\imarg}{.75cm} % "internal" margin
\newlength{\parw}
\setlength{\parw}{\textwidth}
\addtolength{\parw}{-2\imarg}

\newcommand\CCLblock[5]{
\begin{center}#1\end{center}
\begin{list}{}{\setlength\leftmargin{\imarg}\setlength\rightmargin{\imarg}}
{\color{black}\item[]{\bfseries You are free:}\vskip 1ex \setlength\tabcolsep{0.3em}
\begin{tabular}{cl}#2	\end{tabular}\item[]{\bfseries Under the following conditions:}
\vskip 1ex \setlength\tabcolsep{0.3em} \begin{tabular}{cl}#3 \end{tabular}\\[1ex]
Subject to conditions outlined in the license.	} \vskip 2ex
This work is licensed under the \emph{#4} License.	To view a copy of this license, 
visit\\ \makebox[\parw]{\url{#5}}\\ or send a letter to Creative Commons, 171 Second Street, 
Suite 300, San Francisco, California, 94105, USA. \end{list}
}

\newcommand\CCbyInfo{
\CCLblock
	{\CCbyButton{3.5cm}{!}}
	{\CCshareLine\\[1ex] \CCremixLine}
	{\CCattribLine}
	{Creative Commons Attribution 3.0 Unported}
	{http://creativecommons.org/licenses/by/3.0/}
}

\newcommand\CCbysaInfo{
\CCLblock
	{\CCbysaButton{3.5cm}{!}}
	{\CCshareLine\\[1ex] \CCremixLine}
	{\CCattribLine\\[1ex] \CCalikeLine}
	{Creative Commons Attribution-Share\-Alike 3.0 Unported}
	{http://creativecommons.org/licenses/by-sa/3.0/}
}

\newcommand\CCbyndInfo{
